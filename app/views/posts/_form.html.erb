<%= form_for(@post) do |f| %>

	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</div>

	<div>

		<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
			<div>
				<%= b.label%>
				<%= b.check_box %>
			</div>
		<% end %>

		<%= f.fields_for :categories do |c_builder| %>
			<% c_builder.text_field :name %>
		<% end %>

	</div>

	<div>
		<%= f.submit %>
	</div>
<% end %>

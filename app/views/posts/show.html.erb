<h1><%= @post.title %></h1>
<h3><%= @post.content %></h3>
<ul>
  <% @post.categories.each do |category| %>
  <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>

<% @post.comments.each do |comment| %>
<p><%= comment.content %></p>
<% end %>

<% @post.users.uniq.each do |user| %>
<%= link_to user.username, user_path(user) %>
<% end %>
